<div class="col-md-10 offset-md-1 mt-5">
  <div class="row">
    <div class="col-md-4 mb-4">
      <% if @book.image.attached? %>
        <%= image_tag @book.image.variant(resize: "300x300"), class: "img-thumbnail" %>
      <% else %>
        <%= image_tag "no_image.png", class: "img-thumbnail" %>
      <% end %>
    </div>

    <div class="col-md-8">
      <h2><%= @book.title %></h2>
      <ul>
        <li><b>価格: </b><%= number_with_delimiter @book.price %>円</li>
        <li><b>発売日: </b><%= @book.publish_date %></li>
      </ul>
      <hr>
      <h4>商品の説明</h4>
      <%= simple_format @book.description %>
      <%= link_to "編集", edit_book_path(@book), class: "btn btn-primary" %>
      <%= button_tag "削除", class: "btn btn-warning", data: { toggle: "modal", target: "#delete-book" } %>
      <%= link_to "戻る", books_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

<div class="modal fade" id="delete-book">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">書籍削除</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p><%= @book.title %>を削除しますか？</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">キャンセル<button>
        <%= link_to "削除する", book_path(@book), method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>